<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/title_principal"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        app:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNavegador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abreNavegador"
        android:text="@string/btn_navegador" />

    <Button
        android:id="@+id/btnGM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abreMaps"
        android:text="@string/btn_google_maps" />

    <Button
        android:id="@+id/btnLlamada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abreLlamada"
        android:text="@string/btn_llamada" />

    <Button
        android:id="@+id/btnEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abreEnviarEmail"
        android:text="@string/btn_email" />

</LinearLayout>